    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Generic analyzer -- from files",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/tools/examples/generic_analyzer.py",
        "args": " --data tests/sample_readsb_data --callback_definitions src/tools/examples/generic_analyzer_callbacks.py examples/generic/example_rules.yaml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Stripview UI live from readsb",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/applications/stripview/controller.py",
        "args": " -- --ipaddr boxone --port 30006 --rules examples/88nv/stripview_ui.yaml examples/88nv/regions/brc_large_regions.kml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Stripview UI demo",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/applications/stripview/controller.py",
        "args": " -- --testdata tests/20minutes.json --delay .2 --rules examples/88nv/stripview_ui.yaml examples/88nv/regions/brc_large_regions.kml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Airport monitor (push ops to appsheet)",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/applications/airport_monitor/main.py",
        "args": "--testdata tests/20minutes.json --delay .01 --rules examples/88nv/airport_monitor_rules.yaml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Airport monitor from live feed",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/applications/airport_monitor/main.py",
        "args": "--ipaddr 127.0.0.1 --port 30006 --rules examples/88nv/airport_monitor_rules.yaml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Replay data to port",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/tools/analysis/replay.py",
        "args": "--port 6666  --speed_x 1000 tests/sample_readsb_data",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Parse and print data from port",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/tools/examples/simple_monitor.py",
        "args": "--ipaddr 127.0.0.1 --port 6666 examples/generic/basic_rules.yaml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Parse all data from files",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/tools/examples/analyze_from_files.py",
        "args": "--yaml src/tools/examples/analyze_from_files.yaml /Users/eastham/adsb_data/2024/08/27",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Do prox resampling from files",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/tools/examples/prox_analyze_from_files.py",
        "args": "--yaml src/tools/examples/prox_analyze_from_files.yaml /Users/eastham/adsb_data/2025/08/30 --resample",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Flight info display (FIDS)",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/applications/flight_info_display/monitor.py",
        "args": " -- --testdata tests/20minutes.json --delay .2 --rules examples/88nv/flight_info_display_config.yaml",
        //            "args": " -- --ipaddr 192.168.87.56 --port 30006 --rules examples/88nv/flight_info_display_config.yaml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Legacy airport monitor 2",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}/examples/legacy/airport_monitor2",
        "program": "monitorapp.py",
        "args": " -- --testdata ../../../tests/20minutes.json --delay .2 --rules monitor.yaml ../../../tests/test2.kml",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "Inject ADS-B data to readsb",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/tools/injection/replay_to_adsb.py",
        "args": "--inject_addr boxone:30001 tests/20minutes.json --speed_x 1",
        "console": "integratedTerminal",
        "justMyCode": true
      },
      {
        "name": "TCP API client",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "program": "src/core/network/tcp_client.py",
        "args": "examples/generic/tcp_rules.yaml"
      }
    ]
}
