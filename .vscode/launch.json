    "version": "0.2.0",
    "configurations": [

        {"name":"Python: Current File","type":"python","request":"launch","program":"${file}","console":"integratedTerminal","justMyCode":true},

        {
            "name": "Stripview UI demo",
            "type": "python",
            "request": "launch",
            "program": "controller.py",
            "cwd": "${workspaceFolder}/src/stripview",
            "args": " -- --testdata ../../tests/20minutes.json --delay .01 --rules ui.yaml ../../tests/test2.kml",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Public UI",
            "type": "python",
            "request": "launch",
            "program": "public_ui.py",
            "cwd": "${workspaceFolder}/src/stripview",
            "args": " -- --testdata ../../tests/20minutes.json --delay .01 --rules public_ui.yaml ../../tests/test2.kml",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Push ops to appsheet",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/op_pusher",
            "program": "op_pusher.py",
            "args": "--testdata ../../tests/20minutes.json --delay .01 --rules rules.yaml ../../tests/test1.kml",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Replay data to port",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/analyzer",
            "program": "replay.py",
            "args": "--port 6666  --speed_x 1000 ~/adsb_data/2023/08/30",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Parse data from port",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/adsb_actions",
            "program": "main.py",
            "args": "--ipaddr 127.0.0.1 --port 6666 ../op_pusher/rules.yaml",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Parse all data from files",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/analyzer",
            "program": "analyze_from_files.py",
            "args": "~/adsb_data/2023/08/30",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Airport monitor",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/airport_monitor",
            "program": "monitor.py",
            "args": " -- --testdata ../../tests/20minutes.json --delay .2 --rules monitor.yaml ../../tests/test2.kml",
            "console": "integratedTerminal",
            "justMyCode": true
        }
        {
            "name": "Airport monitor2",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/airport_monitor2",
            "program": "monitorapp.py",
            "args": " -- --testdata ../../tests/20minutes.json --delay .2 --rules monitor.yaml ../../tests/test2.kml",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
